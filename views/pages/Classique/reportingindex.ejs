            type: "GET",
            url: "/GetspecialiteDossierFlexi",

            success: function(msg){
                var html = "<option value=''>Tous</option>";
                var data = null;
                try {
                    data = JSON.parse(msg);
                    for (var i = 0 ; i<data.length ; i++){
                        html += "<option value='"+data[i].id_lotclient+"'>"+data[i].libelle+"</option>"
                    }
                    $("#type").html(html);
                }
                catch (e) {
