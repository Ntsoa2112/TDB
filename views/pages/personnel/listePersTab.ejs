	<tbody>
	<% resultat.forEach(function(result){ %>
		<tr>
		  <td align=""><%= result.id_pers %></td>
		  <!--<td align=""><img src="data:image/png;base64, img " class="img-circle" alt="Photo" style="width: 50px; height: 50px"/></td>-->
		  <td align=""><%= result.nom %></td>
		  <td align=""><%= result.prenom %></td>
		  <td align=""><%= result.cin %></td>
		  <td align=""><%= result.departement %></td>
		  <td align=""><%= result.fonction %></td>
